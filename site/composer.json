{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://sarnia.ca",
    "forum": "https://sarnia.ca"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type":"git",
      "url": "git@cos-gitlab-prod.cos.city.sarnia.on.ca:it/sarnia.ca-theme.git"
    },
    {
      "type":"git",
      "url": "git@cos-gitlab-prod.cos.city.sarnia.on.ca:it/sarnia.ca-plugin.git"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "5.8.0-RC2",
        "type": "wordpress-muplugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%ACF_PRO_KEY}&t={%version}"
        },
        "require": {
          "composer/installers": "^1.4",
          "ffraenz/private-composer-installer": "^2.0"
        }
      }
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^3.0.0",
    "oscarotero/env": "^1.1.0",
    "roots/wordpress": "5.1.1",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "roots/soil": "^3.7",
    "cos/sarnia.ca-theme": "dev-master",
    "cos/sarnia.ca-plugin": "dev-master",
    "wpackagist-plugin/advanced-custom-fields-nav-menu-field": "^2.0",
    "wpackagist-plugin/easy-wp-smtp": "1.3.9.1",
    "wpackagist-plugin/members": "^2.1",
    "wpackagist-plugin/luckywp-table-of-contents": "^1.0",
    "wpackagist-plugin/restricted-site-access": "^7.0",
    "wpackagist-plugin/health-check": "^1.2",
    "wpackagist-plugin/google-sitemap-generator": "^4.1",
    "wpackagist-plugin/gravity-forms-pdf-extended": "^5.1",
    "wpackagist-plugin/nginx-cache": "^1.0",
    "wpackagist-plugin/better-search-replace": "^1.3",
    "wpackagist-plugin/duplicate-post": "^3.2",
    "wpackagist-plugin/query-monitor": "^3.3",
    "wpackagist-plugin/stream": "^3.2",
    "wpackagist-plugin/safe-svg": "^1.9",
    "roots/wp-stage-switcher": "^2.1",
    "primetime/wp-plugin-activation-manifest": "^1.0",
    "wpackagist-plugin/simple-page-ordering": "^2.3",
    "wpackagist-plugin/next-active-directory-integration": "^2.1",
    "wpackagist-plugin/safe-redirect-manager": "^1.9",
    "advanced-custom-fields/advanced-custom-fields-pro": "5.8.0-RC2"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
