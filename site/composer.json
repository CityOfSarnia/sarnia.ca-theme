{
  "name": "it/sarnia.ca",
  "type": "project",
  "license": "MIT",
  "description": "City of Sarnia webpage",
  "homepage": "https://sarnia.ca/",
  "authors": [
    {
      "name": "City of Sarnia IT Department",
      "email": "it@sarnia.ca",
      "homepage": "https://sarnia.ca"
    }
  ],
  "keywords": [
    "bedrock", "composer", "roots", "wordpress", "wp", "wp-config"
  ],
  "support": {
    "issues": "https://sarnia.ca",
    "forum": "https://sarnia.ca"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type":"git",
      "url": "https://cos-gitlab-prod.cos.city.sarnia.on.ca/it/sarnia.ca-theme.git"
    },
    {
      "type":"git",
      "url": "https://cos-gitlab-prod.cos.city.sarnia.on.ca/it/sarnia.ca-plugin.git"
    }
  ],
  "require": {
    "php": ">=7.1",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^3.0.0",
    "oscarotero/env": "^1.1.0",
    "roots/wordpress": "5.1.1",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/members": "^2.1",
    "wpackagist-plugin/wp-mail-smtp": "^1.4",
    "wpackagist-plugin/advanced-custom-fields-nav-menu-field": "^2.0",
    "wpackagist-plugin/luckywp-table-of-contents": "^1.0",
    "colethorsen/sarnia.ca-theme": "dev-master",
    "cos/sarnia.ca-plugin": "dev-master",
    "wpackagist-plugin/restricted-site-access": "^7.0",
    "wpackagist-plugin/health-check": "^1.2",
    "wpackagist-plugin/google-analytics-dashboard-for-wp": "^5.3",
    "wpackagist-plugin/google-sitemap-generator": "^4.1",
    "wpackagist-plugin/gravity-forms-pdf-extended": "^5.1",
    "wpackagist-plugin/wp-security-audit-log": "^3.4",
    "wpackagist-plugin/broken-link-checker": "^1.11",
    "wpackagist-plugin/nginx-cache": "^1.0"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2",
    "roave/security-advisories": "dev-master"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
